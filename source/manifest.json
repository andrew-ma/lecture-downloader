{
	"name": "Panopto Downloader",
	"short_name": "panoptodownloader",
	"version": "1.0.0",
	"manifest_version": 2,
	"description": "Adds download button for Panopto videos",
	"homepage_url": "https://github.com/andrew-ma/panopto_downloader_extension",
	"minimum_chrome_version": "74",
	"applications": {
		"gecko": {
			"id": "panopto_downloader@andrewmatech.com",
			"strict_min_version": "67.0"
		}
	},
	"icons": {
		"48": "icon.png",
		"96": "icon@2x.png"
	},
	"content_scripts": [
		{
			"matches": [
				"*://*.panopto.com/*"
			],
			"exclude_matches": [
				"*://www.panopto.com/*",
				"*://support.panopto.com/*",
				"*://login.panopto.com/*"
			],
			"js": [
				"panopto_download_button.js"
			],
			"css": [
				"panopto_download_button.css"
			]
		}
	]
}